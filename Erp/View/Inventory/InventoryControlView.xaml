                <Style TargetType="ComboBox">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Filter.DemandType}" Value="Constant_Demand">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>

        <ComboBox x:Name="TimeVaryingDemandTypesComboBox" ItemsSource="{Binding TimeVaryingDemandTypes}" SelectedItem="{Binding Filter.TimeVaryingDemandType , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Grid.Column="3">
