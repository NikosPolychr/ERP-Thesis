<Window x:Class="Erp.CustomControls.F7PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Erp.CustomControls"
        mc:Ignorable="d"
        Title="F7PopupWindow" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Images/popupwindow.PNG"
        >
    <Border BorderThickness="6" BorderBrush="#001F4D" CornerRadius="5" Background="White" Padding="0">
        <Grid>
            <DockPanel LastChildFill="True">
                <!-- Title bar -->
                <Border Background="#001F4D" Height="30" DockPanel.Dock="Top">
                    <DockPanel>
                        <!-- Optional: Add an Image for logo inside title bar -->

                        <TextBlock x:Name="TitleTextBlock" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="10,0" Text="Popup Title" />
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button x:Name="MinimizeButton" Content="&#x2015;" Width="30" Height="30" Background="#001F4D" Foreground="White" BorderThickness="0" 
                                    Click="MinimizeButton_Click" ToolTip="Minimize"/>
                            <Button x:Name="MaximizeButton" Content="&#x25A1;" Width="30" Height="30" Background="#001F4D" Foreground="White" BorderThickness="0" 
                                    Click="MaximizeButton_Click" ToolTip="Maximize"/>
                            <Button Content="X" Width="30" Height="30" Background="#001F4D" Foreground="White" BorderThickness="0" 
                                    Click="CloseButton_Click" ToolTip="Close"/>
                        </StackPanel>
                        
                        
                    </DockPanel>
                </Border>
                <!-- Your UserControl -->
                <local:F7Popup x:Name="F7PopupControl" />
            </DockPanel>
        </Grid>
    </Border>
</Window>